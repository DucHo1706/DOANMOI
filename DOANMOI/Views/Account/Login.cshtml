@model DOANMOI.Models.User

@{
    Layout = null;
}
<link href="~/Content/CSS-HOME/SignupDesign.css" rel="stylesheet" />

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
</head>
<body>
    <div class="wrapper">
        @Html.ActionLink("Trang Chủ", "home", "TrangChu", null, new { @class = "btn btn-primary" })

        @using (Html.BeginForm("Login","Account",FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <h1>Đăng Nhập</h1>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label for="email-input">
                    <img src="~/Content/IMG/mail_24dp_000000_FILL1_wght400_GRAD0_opsz24.svg" alt="Email" />
                </label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email của bạn" } })
                
            </div>
            <div>@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</div>
            <div class="form-group">
                <label for="password-input">
                    <img src="~/Content/IMG/lock_24dp_000000_FILL1_wght400_GRAD0_opsz24.svg" alt="Password" />
                </label>
                @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Mật khẩu của bạn" } })
                
            </div>
            <div>@Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })</div>
            <button type="submit" class="btn btn-success">Đăng Nhập</button>
        }

        <p>Mới ở đây? @Html.ActionLink("Đăng ký", "Register")</p>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
