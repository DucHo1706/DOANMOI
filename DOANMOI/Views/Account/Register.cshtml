@model DOANMOI.Models.User

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/CSS-HOME/SignupDesign.css" rel="stylesheet" />
    <title>Signup</title>
</head>
<body>
    <div class="wrapper">
        <h1>Sign Up</h1>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form>
        <div>
            <label for="firstname-input">
                <img src="~/Content/IMG/person_24dp_000000_FILL1_wght400_GRAD0_opsz24.svg" />
            </label>
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Your username" } })

        </div>
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        <div>
            <label for="email-input">
                <img src="~/Content/IMG/mail_24dp_000000_FILL1_wght400_GRAD0_opsz24.svg" />
            </label>
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Your email" } })

        </div>
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <div>
            <label for="password-input">
                <img src="~/Content/IMG/lock_24dp_000000_FILL1_wght400_GRAD0_opsz24.svg" />
            </label>
            @Html.EditorFor(m => m.UserPassword, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Your password" } })

        </div>
        @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "text-danger" })
        <button type="submit">Sign Up</button>
    </form>
            <p>Already have an account? @Html.ActionLink("Log In", "Login")</p>
        }
    </div>
</body>
</html>